{
  "extends": "@acme/tsconfig/next.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": ".",
    "paths": {
      "@root/*": ["./*"]
    },
    "target": "ES6",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true
  },
  "include": [
    "next-env.d.ts",
    "next-auth.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "tests/**/*.ts",
    "cucumber.mjs"
  ],
}
