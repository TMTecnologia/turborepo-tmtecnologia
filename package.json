{
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=docs^... && changeset publish",
    "lint:syncpack": "syncpack lint-semver-ranges && syncpack list-mismatches",
    "format:syncpack": "syncpack fix-mismatches && syncpack format"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "eslint": "^8.15.0",
    "eslint-config-acme": "0.0.0",
    "prettier": "^2.5.1",
    "syncpack": "^8.2.4",
    "turbo": "latest"
  },
  "version": "0.0.0",
  "packageManager": "yarn@3.2.1",
  "syncpack": {
    "semverGroups": [
      {
        "range": "*",
        "dependencies": [
          "@acme/**",
          "eslint-config-acme"
        ],
        "packages": [
          "**"
        ]
      }
    ],
    "sortFirst": [
      "name",
      "version",
      "description",
      "repository",
      "author",
      "license",
      "private"
    ]
  }
}
