{
  "extends": "@acme/tsconfig/next.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": ".",
    "paths": {
      "@root/*": ["./*"],
    },
    "target": "ES6",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true
  },
  "include": [
    "**/*.ts",
    "cucumber.mjs"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
